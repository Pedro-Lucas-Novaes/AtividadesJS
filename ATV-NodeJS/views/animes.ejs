    <%#= animes %>

    <!-- Percorrendo a lista de produtos com forEach-->
     <ul>
        <% animes.forEach(anime => { %>
            <li> <%= anime.nome %> </li>
            <li> <%= anime.preco.toLocaleString("pt-br",
             {style: "currency", currency: "BRL"}) %> </li>
             <img src="<%= anime.img %>" alt="<%= anime.nome %>" width="1000">
            <br>
        <% }) %>
     </ul>

